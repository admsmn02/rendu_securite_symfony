{% extends "base.html.twig" %}

{% block title %}Liste des Sodas{% endblock %}

{% block body %}
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
    {% include 'layout/header.html.twig' %}
    <h1>Liste des Sodas</h1>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for soda in sodas %}
                <tr>
                    <td>{{ soda.name }}</td>
                    <td>{{ soda.price }}</td>
                    <td>{{ soda.quantity}}</td>
                    <td>
                        <a href="{{ path('show', {'slug': soda.slug}) }}" class="btn btn-primary">View</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('edit', {'slug': soda.slug}) }}" class="btn btn-warning">Modify</a>
                            <form action="{{ path('delete', {'slug': soda.slug}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ soda.id) }}">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun soda trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}